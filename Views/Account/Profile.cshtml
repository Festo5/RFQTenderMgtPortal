@using RecruitmentPortal.Models.ViewModels.Account
@model UserProfileModel
@{
    ViewData["Title"] = "My Profile";
    var colorSettings = Model.ColorSettings;
}

<style>
    :root {
        @colorSettings.PrimaryColorCss
        @colorSettings.SecondaryColorCss
        @colorSettings.Tertiary1ColorCss
        @colorSettings.Tertiary2ColorCss
        @colorSettings.Tertiary3ColorCss
    }

    .profile-container {
        background: linear-gradient(135deg, #f5f7fa 0%, #e4e8eb 100%);
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem 0;
    }

    .profile-card {
        background: white;
        border-radius: 10px;
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 500px;
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .profile-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
        }

    .profile-header {
        background: var(--primary-color);
        color: white;
        padding: 2.5rem;
        text-align: center;
    }

        .profile-header h3 {
            font-weight: 700;
            margin-bottom: 0.5rem;
        }

    .profile-body {
        padding: 2.5rem;
    }

    .profile-picture-container {
        text-align: center;
        margin-bottom: 2rem;
    }

    .profile-picture {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        object-fit: cover;
        border: 5px solid #f0f0f0;
    }

    .profile-picture-placeholder {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        background-color: #f0f0f0;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto;
    }

    .profile-picture-icon {
        font-size: 3rem;
        color: #999;
    }

    .form-floating label {
        color: #666;
    }

    .form-control {
        border-radius: 5px;
        padding: 15px;
        border: 1px solid #ddd;
    }

        .form-control:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 0.25rem fade( @colorSettings.PrimaryColor, 25%);
        }

    .btn-update {
        background: var(--primary-color);
        border: none;
        padding: 12px;
        font-weight: 600;
        border-radius: 5px;
        transition: all 0.3s ease;
        color: white;
    }

        .btn-update:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px fade( @colorSettings.PrimaryColor, 30%);
            background: var(--primary-color);
            opacity: 0.9;
        }

    .alert-success {
        background-color: fade( @colorSettings.PrimaryColor, 15%);
        border-color: fade( @colorSettings.PrimaryColor, 30%);
        color: darken( @colorSettings.PrimaryColor, 20%);
    }

    .alert-danger {
        background-color: fade(#dc3545, 15%);
        border-color: fade(#dc3545, 30%);
        color: #dc3545;
    }
</style>

<div class="profile-container">
    <div class="profile-card">
        <div class="profile-header">
            <h3><i class="fas fa-user-edit me-2"></i> My Profile</h3>
            <p class="mb-0">Update your profile information</p>
        </div>
        <div class="profile-body">
            <form asp-action="Index" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Email" />
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success mb-4">
                        @TempData["SuccessMessage"]
                    </div>
                }

                <div class="profile-picture-container">
                    @if (ViewBag.ProfilePictureBase64 != null)
                    {
                        <img src="data:image/jpeg;base64,@ViewBag.ProfilePictureBase64" class="profile-picture" alt="Profile Picture">
                    }
                    else
                    {
                        <div class="profile-picture-placeholder">
                            <i class="fas fa-user profile-picture-icon"></i>
                        </div>
                    }
                </div>

                <div class="form-floating mb-4">
                    <input value="@Model.Email" class="form-control" placeholder="name@example.com" disabled>
                    <label>Email address</label>
                </div>

                <div class="form-floating mb-4">
                    <input asp-for="CompanyName" class="form-control" placeholder="Your company name">
                    <label asp-for="CompanyName">Company Name</label>
                    <span asp-validation-for="CompanyName" class="text-danger small"></span>
                </div>

                <div class="form-floating mb-4">
                    <input asp-for="PhoneNumber" class="form-control" placeholder="Your phone number">
                    <label asp-for="PhoneNumber">Phone Number</label>
                    <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="ProfilePicture" class="form-label">Profile Picture</label>
                    <input asp-for="ProfilePicture" type="file" class="form-control" accept="image/*">
                    <span asp-validation-for="ProfilePicture" class="text-danger small"></span>
                </div>

                <div class="d-grid mb-4">
                    <button class="btn btn-update btn-lg ladda-button" type="submit" data-style="zoom-in">
                        <span class="ladda-label">Update Profile</span>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            Ladda.bind('.ladda-button', { timeout: 2000 });
            $('.form-floating input').on('focus blur', function () {
                $(this).parents('.form-floating').toggleClass('focused', $(this).is(':focus') || $(this).val() !== '');
            });

            $('input[type="file"]').change(function() {
                var file = this.files[0];
                if (file && !file.type.match('image.*')) {
                    alert('Please select an image file');
                    $(this).val('');
                }
            });
        });
    </script>
}
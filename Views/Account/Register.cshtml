@using RecruitmentPortal.Models.ViewModels.Account
@model UserRegistrationModel
@{
    ViewData["Title"] = "Create Your Account";
    var colorSettings = Model.ColorSettings;
}

<style>
    :root {
        @colorSettings.PrimaryColorCss
        @colorSettings.SecondaryColorCss
        @colorSettings.Tertiary1ColorCss
        @colorSettings.Tertiary2ColorCss
        @colorSettings.Tertiary3ColorCss
    }

    .register-container {
        background: linear-gradient(135deg, #f5f7fa 0%, #e4e8eb 100%);
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem 0;
    }

    .register-card {
        background: white;
        border-radius: 10px;
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 500px;
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .register-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
    }

    .register-header {
        background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
        color: white;
        padding: 2.5rem;
        text-align: center;
    }

    .register-header h3 {
        font-weight: 700;
        margin-bottom: 0.5rem;
    }

    .register-body {
        padding: 2.5rem;
    }

    .form-floating label {
        color: #666;
    }

    .form-control {
        border-radius: 5px;
        padding: 15px;
        border: 1px solid #ddd;
    }

    .form-control:focus {
        border-color: var(--primary-color);
        box-shadow: 0 0 0 0.25rem fade( @colorSettings.PrimaryColor, 25%);
    }

    .btn-register {
        background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
        border: none;
        padding: 12px;
        font-weight: 600;
        border-radius: 5px;
        transition: all 0.3s ease;
        color: white;
    }

    .terms-link {
        color: var(--primary-color);
        transition: color 0.2s;
    }

    .terms-link:hover {
        text-decoration: none;
        opacity: 0.8;
    }

    .login-link {
        color: var(--primary-color);
        font-weight: 600;
    }

    .divider {
        border-top: 1px solid #eee;
        margin: 1.5rem 0;
        position: relative;
    }

    .divider-text {
        position: absolute;
        top: -10px;
        left: 50%;
        transform: translateX(-50%);
        background-color: white;
        padding: 0 15px;
        color: #999;
        font-size: 0.8rem;
    }
</style>

<div class="register-container">
    <div class="register-card">
        <div class="register-header">
            <h3><i class="fas fa-user-plus me-2"></i> Create Your Account</h3>
            <p class="mb-0">Join our tender management platform today</p>
        </div>
        <div class="register-body">
            <form asp-action="Register">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="form-floating mb-4">
                    <input asp-for="FullName" class="form-control" placeholder="John Doe">
                    <label asp-for="FullName">Full Name</label>
                    <span asp-validation-for="FullName" class="text-danger small"></span>
                </div>

                <div class="form-floating mb-4">
                    <input asp-for="Email" class="form-control" placeholder="name@example.com">
                    <label asp-for="Email">Email address</label>
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="form-floating mb-4">
                    <input asp-for="Password" type="password" class="form-control" placeholder="Password">
                    <label asp-for="Password">Password</label>
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <div class="form-floating mb-4">
                    <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password">
                    <label asp-for="ConfirmPassword">Confirm Password</label>
                    <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                </div>

                <div class="d-grid mb-4">
                    <button class="btn btn-register btn-lg ladda-button" type="submit" data-style="zoom-in">
                        <span class="ladda-label">Create Account</span>
                    </button>
                </div>

                <div class="text-center small text-muted mb-4">
                    By registering, you agree to our <a href="#" class="terms-link">Terms of Service</a> and <a href="#" class="terms-link">Privacy Policy</a>
                </div>

                <div class="divider">
                    <span class="divider-text">ALREADY HAVE AN ACCOUNT?</span>
                </div>

                <div class="text-center">
                    <p class="mb-0">Sign in <a asp-action="Login" class="login-link">here</a></p>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            Ladda.bind('.ladda-button', { timeout: 2000 });
            $('.form-floating input').on('focus blur', function () {
                $(this).parents('.form-floating').toggleClass('focused', $(this).is(':focus') || $(this).val() !== '');
            });
        });
    </script>
}
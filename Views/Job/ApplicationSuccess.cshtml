@{
    ViewData["Title"] = "Application Submitted";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 text-center">
            <div class="card border-0 shadow">
                <div class="card-body p-5">
                    <div class="mb-4">
                        <i class="fas fa-check-circle text-success fa-5x"></i>
                    </div>
                    <h2 class="mb-3">Application Submitted Successfully!</h2>
                    <p class="lead mb-4">Thank you for applying. We'll review your application and get back to you soon.</p>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary px-4">
                        Back to Home
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>